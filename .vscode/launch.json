    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 9229,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
            "args": [
                "--inspect-brk",
                "${workspaceFolder}/libraries/*/test/**/*.js",
                "--recursive"
            ],
            "port": 9229,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "(CS) Debug Text Analytics Middleware",
            "program": "${workspaceRoot}\\libraries\\botbuilder-middleware-text-analytics\\example\\app-cs.js",
            "envFile": "${workspaceFolder}/libraries/botbuilder-middleware-text-analytics/example/.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "(Watson) Debug Text Analytics Middleware",
            "program": "${workspaceRoot}\\libraries\\botbuilder-middleware-watson-nlu\\example\\app-watson.js",
            "envFile": "${workspaceFolder}/libraries/botbuilder-middleware-watson-nlu/example/.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "(AWS) Debug Text Analytics Middleware",
            "program": "${workspaceRoot}\\libraries\\botbuilder-middleware-aws-comprehend\\example\\app-aws.js",
            "envFile": "${workspaceFolder}/libraries/botbuilder-middleware-aws-comprehend/example/.env"
        }
    ]
}
